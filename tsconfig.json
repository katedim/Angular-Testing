  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": false,
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "inlineSourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
